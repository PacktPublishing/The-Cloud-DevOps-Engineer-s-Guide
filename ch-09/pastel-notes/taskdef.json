{
        "family": "pastel-notes-task",
        "executionRoleArn": "arn:aws:iam::<AWS_ACCOUNT_ID>:role/pastel-notes-ecs-task-exec-role",
        "taskRoleArn": "arn:aws:iam::<AWS_ACCOUNT_ID>:role/pastel-notes-ecs-task-exec-role",
        "networkMode": "awsvpc",
        "requiresCompatibilities": ["EC2"],
        "cpu": "256",
        "memory": "512",
        "volumes": [
            {
                "name": "efs-storage",
                "efsVolumeConfiguration": {
                    "fileSystemId": "<EFS_ID>",
                    "rootDirectory": "/"
                }
            }
        ],
        "containerDefinitions": [
            {
                "name": "pastel-notes-app",
                "image": "<IMAGE_NAME>",
                "essential": true,
                "portMappings": [{ "containerPort": 3000, "hostPort": 3000, "protocol": "tcp" }],
                "mountPoints": [
                    {
                        "sourceVolume": "efs-storage",
                        "containerPath": "/app/backend/data",
                        "readOnly": false
                    }
                ]
            }
        ]
    }